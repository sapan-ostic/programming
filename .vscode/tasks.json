{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++ build and run",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "&&",
                "/${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
    }